@model ATM.Models.Classes.User
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/Deneme/css/style.css" rel="stylesheet" />

</head>

<body class="img js-fullheight" style="background-image: url(../../Deneme/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">ATM EMLAK</h2>
                </div>
            </div>
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="login-wrap p-0">
                            <form action="#" class="signin-form">
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.userName, new { placeholder = "Kullanıcı Adı" , @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.password, new { placeholder = "Şifre", @class = "form-control" })
                                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
                                </div>
                                <div class="form-group d-md-flex">
                                    <div class="w-50">
                                        <label class="checkbox-wrap checkbox-primary">
                                            Remember Me
                                            <input type="checkbox" checked>
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
    <script src="~/Deneme/js/jquery.min.js"></script>
    <script src="~/Deneme/js/bootstrap.min.js"></script>
    <script src="~/Deneme/js/main.js"></script>
    <script src="~/Deneme/js/popper.js"></script>


</body>
</html>

