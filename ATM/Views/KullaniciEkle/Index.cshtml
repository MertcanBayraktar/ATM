@model ATM.Models.Classes.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content" style="">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card" style="margin-left:400px;margin-top:150px">
                    <div class="card-header card-header-success">
                        <h4 class="card-title">Kullanıcı Ekle</h4>
                        <p class="card-category"></p>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("KullaniciEkle", "KullaniciEkle", FormMethod.Post))
                        {
                            @Html.Label("İsim Soyisim")
                            @Html.TextBoxFor(x => x.nameSurname, new { @class = "form-control" })
                            <br />
                            @Html.Label("Kullanıcı Adı")
                            @Html.TextBoxFor(x => x.userName, new { @class = "form-control" })
                            <br />
                            @Html.Label("Şifre")
                            @Html.TextBoxFor(x => x.password, new { @class = "form-control" })
                            <br />
                            @Html.Label("Rolü (kiraci,admin,user) Bu 3ünden biri yazılacak")
                            @Html.TextBoxFor(x => x.role, new { @class = "form-control" })
                            <br />
                            <button type="" class="btn btn-success">Kullanıcı Ekle</button>                            
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


